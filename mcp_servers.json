    "args": [
      "-y",
      "@neo4j/mcp-server-neo4j"
    ],
    "enabled": true,
    "description": "Neo4j GraphRAG e conhecimento estruturado"
  },
  "obsidian": {
    "name": "obsidian",
    "command": "npx",
    "args": [
      "-y",
      "@modelcontextprotocol/server-obsidian"
    ],
